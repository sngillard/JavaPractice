public class TeenNumberChecker {
    
    public static boolean hasTeen(int firstNumber, int secondNumber, int thirdNumber) {
        if((int)firstNumber >= 13 && (int)firstNumber <= 19 || (int)secondNumber >= 13 && (int)secondNumber <= 19 || (int)thirdNumber >= 13 && (int)thirdNumber <= 19) {
            return true;
        } else {
            return false;
        }
    }
    
    public static boolean isTeen(int number) {
        if(number >= 13 && number <= 19) {
            return true; 
        } else {
            return false;
        }
    }
}
