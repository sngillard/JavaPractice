public class Floor {
    // instance variables
    private double width;
    private double length;
    
    //constructor with 2 parameters
    public Floor(double width, double length) {
        if(width < 0) {
            width = 0;
        } 
        
        if(length < 0) {
            length = 0;
        } 
        
        this.width = width;
        this.length = length;
    }

    //instance methods
    public double getArea() {
        return this.width * this.length;
    }
}
