public class Main {

    public static void main(String[] args) {

        String helloWorld = "Hello" + " World";
        helloWorld.concat(" and Goodbye");

        StringBuilder helloWorldBuilder = new StringBuilder("Hello" + " World");
        helloWorldBuilder.append(" and Goodbye");

        printInformation(helloWorld);
        printInformation(helloWorldBuilder);

        StringBuilder emptyStart = new StringBuilder();
        emptyStart.append("a".repeat(57)); //creates a 17 character object full of a's
        //capacity needs to adjust as the text in your String Builder grows
        StringBuilder emptyStart32 = new StringBuilder(32);
        emptyStart32.append("a".repeat(17)); //creates a 17 character object full of a's

        printInformation(emptyStart);
        printInformation(emptyStart32);

        StringBuilder builderPlus = new StringBuilder("Hello" + " World");
        builderPlus.append(" and Goodbye");

        builderPlus.deleteCharAt(16).insert(16, 'g');
        System.out.println(builderPlus);  //deleted G, replaced with g

        builderPlus.replace(16, 17, "G"); //replace g with G
        System.out.println(builderPlus);

        builderPlus.reverse().setLength(7); //reversing and truncating it to 7 characters, so it spells Goodbye backwards
        System.out.println(builderPlus);
    }

    public static void printInformation(String string) {
        System.out.println("String = " + string);
        System.out.println("length = " + string.length());
    }

    public static void printInformation(StringBuilder builder) {
        System.out.println("StringBuilder = " + builder);
        System.out.println("length = " + builder.length());
        System.out.println("capacity = " + builder.capacity());
    }
}
